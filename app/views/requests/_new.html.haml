%h3 New Request
=form_for(:request, url: '/requests') do |f|
  .row
    .columns.large-12
      =f.label :requestor, 'Your Name'
      =f.text_field :requestor, required: true
  .row
    .columns.large-6
      =f.label :location, 'Travel Location'
      =f.text_field :location, required: true
    .columns.large-3
      =f.label :request_type, 'Type'
      =f.select :request_type, [:flight, :room]
    .columns.large-3
      =f.label :category, 'Category'
      =f.select :category, [:p1, :p2, :p3]
  .row
    .columns.large-6
      =f.label :start_date, 'Start Date'
      =f.date_field :start_date, required: true
    .columns.large-6
      =f.label :end_date, 'End Date'
      =f.date_field :end_date, required: true
  .row
    .columns.large-12
      =f.label :message
      =f.text_area :message, required: true
  .row
    .columns.large-12
      =f.submit 'Create Request', {class: 'tiny blue button'}